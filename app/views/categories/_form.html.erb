<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors", object: @category %>
            <%= form_with(model: @category, class: "shadow p-3 bg-light rounded", local: true) do |form| %>
                <div class="form-group row" justify-content>
                    <%= form.label :name, "Category name",class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= form.text_field :name, placeholder: "Category name", class: "form-control shadow rounded" %>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <%= form.submit class: "btn btn-outline-success shadow rounded" %>
                </div>
            <% end %>
        </div>
    </div>
    <div class="text-center mt-4">
        <%= link_to "[ Return to categories list ]", categories_path %> 
    </div>
</div>