<h1 class="text-center mt-4">Log in</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-8">
            <%= form_with scope: :session, url: login_path, class: "shadow p-3 bg-light rounded", local: true do |form| %>
                <div class="form-group" justify-content>
                    <%= form.label :username, class: "form-label" %>
                    <%= form.text_field :username, placeholder: "Enter your username", class: "form-control shadow rounded" %>
                </div>
                <div class="form-group">
                    <%= form.label :password, class: "form-label" %>
                    <%= form.password_field :password, placeholder: "Enter your password", class: "form-control shadow rounded" %>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <%= form.submit "Log in", class: "btn btn-outline-success shadow rounded" %>
                </div>
            <% end %>
        </div>
    </div>
    <div class="text-center mt-4">
        <%= link_to "[ Return to home ]", root_path %> 
    </div>
</div>