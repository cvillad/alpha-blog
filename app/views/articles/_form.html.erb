<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors", object: @article %>
            <%= form_with(model: @article, class: "shadow p-3 bg-light rounded", local: true) do |form| %>
                <div class="form-group row" justify-content>
                    <%= form.label :title, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= form.text_field :title, placeholder: "title", class: "form-control shadow rounded" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= form.label :description, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= form.text_area :description, placeholder: "description", rows: 6, class: "form-control shadow rounded" %>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <%= form.submit class: "btn btn-outline-success shadow rounded" %>
                </div>
            <% end %>
        </div>
    </div>
    <div class="text-center mt-4">
        <%= link_to "[ Return to articles list ]", articles_path %> 
    </div>
</div>