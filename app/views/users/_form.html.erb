<div class="container">
    <div class="row justify-content-center">
        <div class="col-8">
            <%= render "shared/errors", object: @user %>
            <%= form_with(model: @user, class: "shadow p-3 bg-light rounded", local: true) do |form| %>
                <div class="form-group" justify-content>
                    <%= form.label :username, class: "form-label" %>
                    <%= form.text_field :username, placeholder: "username", class: "form-control shadow rounded" %>
                </div>
                <div class="form-group">
                    <%= form.label :email, class: "form-label" %>
                    <%= form.text_field :email, placeholder: "user@example.com", class: "form-control shadow rounded" %>
                </div>
                <div class="form-group">
                    <%= form.label :password, class: "form-label" %>
                    <%= form.password_field :password, placeholder: "password", class: "form-control shadow rounded" %>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <%= form.submit @user.new_record? ? "Sign Up" : "Update account",class: "btn btn-outline-success shadow rounded" %>
                </div>
            <% end %>
        </div>
    </div>
</div>