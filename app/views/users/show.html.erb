<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>
<%= gravatar_for(@user, {size: 200}) %>
<% if logged_in? && @user==current_user %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), container: false, class: "btn btn-outline-info" %>
    <%= link_to "Delete profile", user_path(current_user), method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure?" } %>
  </div>
<% end %>
<h3 class="text-center mt-4">Articles</h3>
<%= will_paginate @articles, list_classes: %w(pagination justify-content-center), renderer: WillPaginate::ActionView::BootstrapLinkRenderer%>
<%= render "articles/articles" %>